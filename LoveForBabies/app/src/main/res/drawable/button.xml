<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="oval"  >
            <corners android:radius="10dip" />
            <stroke android:width="1dip" android:color="#2979ff" />
            <gradient android:angle="-90" android:startColor="#304ffe" android:endColor="#3d5afe"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="oval"  >
            <corners android:radius="10dip" />
            <stroke android:width="1dip" android:color="#304ffe" />
            <solid android:color="#3d5afe"/>
        </shape>
    </item>
    <item >
        <shape android:shape="oval"  >
            <corners android:radius="5dip" />
            <stroke android:width="1dip" android:color="#304ffe" />
            <gradient android:angle="-90" android:startColor="#536dfe" android:endColor="#304ffe" />
        </shape>
    </item>
</selector>